        <li></li>
        <li></li>
    </ul>
</div >
</div>



<script>
document.addEventListener("DOMContentLoaded", function() {
    setTimeout(function() {
        const splashScreenText = document.querySelector("#splash-screen h1");
        splashScreenText.style.opacity = 0;

        setTimeout(function() {
            const splashScreen = document.getElementById("splash-screen");
            splashScreen.style.display = "none";

            const mainContent = document.getElementById("main-content");
            mainContent.classList.remove("hidden");
            mainContent.style.opacity = 1;

            // 3秒後に visible クラスを追加して、トランジションを実行
            setTimeout(function() {
                document.querySelector(".login-link").classList.add("visible");
                document.querySelector(".signup-link").classList.add("visible");
            }, 600); // ボタンのフェードインをさらに3秒後に遅延させる
        }, 3000);
    }, 3000);
});
</script>